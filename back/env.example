# ========================================
# PlantCare API - Variables de Entorno
# ========================================

# Configuración del Servidor
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
DEBUG=False
RELOAD=True

# Configuración de Base de Datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=tu_password_aqui
DB_DATABASE=plantcare
DB_SSLMODE=prefer
DB_CONNECT_TIMEOUT=10
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Configuración de Seguridad JWT
SECRET_KEY=tu_clave_secreta_muy_larga_y_segura_aqui_cambiala_en_produccion
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# Configuración de Rate Limiting
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Configuración de IA (OpenAI)
OPENAI_API_KEY=tu_api_key_de_openai_aqui
OPENAI_MODEL=gpt-3.5-turbo
AI_ENABLED=True

# Configuración de Redis (Opcional - para cache y rate limiting)
REDIS_ENABLED=False
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# Configuración de Logging
LOG_LEVEL=INFO
LOG_FILE=plantcare.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Configuración de Email (Opcional)
EMAIL_ENABLED=False
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_de_aplicacion

# Configuración específica de PlantCare
MAX_SENSORS_PER_USER=10
DATA_RETENTION_DAYS=365
ALERT_THRESHOLD_LOW=20.0
ALERT_THRESHOLD_HIGH=80.0
