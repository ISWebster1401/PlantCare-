# ========================================
# PlantCare API - Variables de Entorno
# ========================================

# Configuración del Servidor
SERVER_HOST=0.0.0.0
SERVER_PORT=5000
DEBUG=False
RELOAD=True

# Configuración de Base de Datos PostgreSQL
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=tu_password_aqui
DB_DATABASE=plantcare
DB_SSLMODE=prefer
DB_CONNECT_TIMEOUT=10
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Configuración de Seguridad JWT
SECRET_KEY=tu_clave_secreta_muy_larga_y_segura_aqui_cambiala_en_produccion
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60  # 1 hora por defecto (si remember_me est? activado, ser? 1 mes)
REFRESH_TOKEN_EXPIRE_DAYS=7


# Configuración de IA (OpenAI)
OPENAI_API_KEY=tu_openai_api_key_aqui
OPENAI_MODEL=gpt-4o
AI_ENABLED=True

# Configuración de Google Imagen (Vertex AI)
GOOGLE_APPLICATION_CREDENTIALS=/ruta/al/service-account.json
GEMINI_IMAGE_MODEL=imagegeneration@006  # Imagen 3 (100 gratis/d?a, $0.03 despu?s)
# Alternativas:
# GEMINI_IMAGE_MODEL=imagen-4-fast-generate-001  # Imagen 4 Fast ($0.02)
# GEMINI_IMAGE_MODEL=imagen-4-generate-001  # Imagen 4 Standard ($0.04)

# Configuración de Supabase Storage (Almacenamiento de imágenes)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9...  # service_role key (NO anon key)
SUPABASE_STORAGE_BUCKET=plantcare

# Configuración de Cloudinary (DEPRECATED - usar Supabase)
# CLOUDINARY_CLOUD_NAME=tu_cloud_name
# CLOUDINARY_API_KEY=tu_api_key
# CLOUDINARY_API_SECRET=tu_api_secret


# Configuración de Logging
LOG_LEVEL=INFO
LOG_FILE=plantcare.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Zona horaria de la aplicación
APP_TIMEZONE=America/Santiago

# Autenticación con Google
GOOGLE_CLIENT_ID=tu_google_client_id
GOOGLE_CLIENT_SECRET=tu_google_client_secret
GOOGLE_ALLOWED_DOMAINS=

# Configuración de SendGrid para emails
SENDGRID_API_KEY=your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@plantcare.com
SENDGRID_FROM_NAME=PlantCare Support
CONTACT_EMAIL=contacto@plantcare.com

# Configuración de Email (Opcional - Legacy)
EMAIL_ENABLED=False
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=tu_email@gmail.com
SMTP_PASSWORD=tu_password_de_aplicacion

# Configuración de Redis Cache
REDIS_URL=redis://localhost:6379/0  # Formato: redis://host:port/db (sin password para desarrollo)
REDIS_PASSWORD=  # Opcional: contraseña para Redis (dejar vacío para desarrollo sin auth)
REDIS_CACHE_TTL_LATEST=900  # 15 minutos (última lectura)
REDIS_CACHE_TTL_DAILY=86400  # 24 horas (lecturas diarias y promedios diarios)
REDIS_CACHE_TTL_WEEKLY=604800  # 7 días (promedios semanales)

# Configuración específica de PlantCare
MAX_SENSORS_PER_USER=10
DATA_RETENTION_DAYS=365
ALERT_THRESHOLD_LOW=20.0
ALERT_THRESHOLD_HIGH=80.0
